{
    "explorer.confirmDragAndDrop": false,
    "editor.fontSize": 18,
    "editor.tabSize": 2,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "editor.fontFamily": "Fira Code", // "iosevka" is an alternative nice front
    "explorer.confirmDelete": false,
    "files.insertFinalNewline": true,
    "git.autofetch": true,
    "workbench.colorTheme": "Monokai Pro",
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.iconTheme": "Monokai Pro Icons",
    "languageStylus.useSeparator": false,
    "search.exclude": {
        "**/vendor": true,
        "**/node_modules": true,
    },
    "editor.formatOnSave": true,
    "editor.minimap.enabled": true,
    "workbench.sideBar.location": "right",
    "workbench.list.keyboardNavigation": "simple",
    "editor.fontWeight": "500",
    "editor.find.addExtraSpaceOnTop": false,
    "editor.fontLigatures": true,
    "files.watcherExclude": {
        "**/vendor/**": true,
        "**/node_modules": true,
    },
    "workbench.enableExperiments": false,
    "workbench.tree.indent": 16,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.settings.useSplitJSON": true,
    "zenMode.centerLayout": false,
    "zenMode.hideActivityBar": false,
    "zenMode.hideTabs": false,
    "window.menuBarVisibility": "hidden",
    "window.restoreFullscreen": true,
    "window.title": "${rootName}",
    "explorer.openEditors.visible": 0,
    "diffEditor.renderSideBySide": true,
    "workbench.panel.defaultLocation": "bottom",
    "editor.smoothScrolling": true,
    "html.format.enable": false,
    "editor.cursorBlinking": "smooth",
    "go.useLanguageServer": true,
    "zenMode.hideLineNumbers": false,
    "workbench.editor.limit.enabled": true,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.scrollBeyondLastColumn": 10,
    "workbench.tips.enabled": false,
    "workbench.statusBar.visible": false,
    "explorer.decorations.badges": false,
    "search.quickOpen.history.filterSortOrder": "recency",
    "terminal.integrated.rightClickBehavior": "default", // On windows do not act like every windows terminal
    "editor.cursorSurroundingLines": 4,
    "diffEditor.renderIndicators": false,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "files.trimTrailingWhitespace": true,
}
